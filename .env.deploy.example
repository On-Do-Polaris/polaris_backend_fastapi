# Polaris Backend FastAPI 배포 환경변수 설정 파일
#
# 사용법:
#   1. 이 파일을 .env.deploy 로 복사
#   2. 실제 값으로 변경
#   3. deploy.sh 실행
#
# 주의: .env.deploy 파일은 반드시 .gitignore에 추가하여 버전 관리에서 제외하세요!

################################################################################
# GCP Artifact Registry 설정
################################################################################
ARTIFACT_REGISTRY_LOCATION=asia-northeast3
GCP_PROJECT_ID=your-gcp-project-id
ARTIFACT_REGISTRY_REPO=your-repo-name

# GCP Service Account Key (JSON 전체 내용을 한 줄로)
GCP_SA_KEY='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'

################################################################################
# Application 환경변수
################################################################################
API_KEY=your-api-key
OPENAI_API_KEY=sk-...

# Database 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=polaris_db
DB_USER=polaris_user
DB_PASSWORD=your-db-password

# Mock Data 설정
USE_MOCK_DATA=false
WORKFLOW_MOCK_MODE=false

# LangSmith 설정
LANGSMITH_ENABLED=false
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=your-project-name

# External Services
MODELOPS_URL=http://modelops-service:8080
MODELOPS_BASE_URL=http://modelops-service:8080
SPRING_BOOT_BASE_URL=http://spring-boot-service:8080

# Qdrant 설정
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_STORAGE_PATH=/qdrant/storage

# Application Database
APPLICATION_DB_HOST=localhost
APPLICATION_DB_PORT=5432
APPLICATION_DB_NAME=application_db
APPLICATION_DB_USER=app_user
APPLICATION_DB_PASSWORD=your-app-db-password
